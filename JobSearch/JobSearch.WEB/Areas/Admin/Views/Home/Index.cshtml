@model JobSearch.WEB.Areas.Admin.Models.UserViewModel

@Html.ActionLink("Register", "Register", "Home", null, null, null, null, new { @class = "admin-lable" })

@using (Html.BeginForm("Login", "Home", FormMethod.Post, htmlAttributes : new { @class="form-login" } ))
{
    <div class="form-group">
        <label>@Resources.Resource.Lable_Email</label>
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = @Resources.Resource.Lable_Email } })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        <label>@Resources.Resource.Lable_Password</label>
        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = @Resources.Resource.Lable_Password } })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input class="btn btn-primary" type="submit" value="@Resources.Resource.Lable_SignIn" />
}